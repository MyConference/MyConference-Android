<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:id="@+id/home_view_flipper"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context=".HomeActivity" >
	    
    <!-- Home Layout -->
	<RelativeLayout 
	    android:id="@+id/home_start"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	
	    <Button 
	        android:id="@+id/home_start_sign_up_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:text="@string/home_sign_up"
	        android:textStyle="bold"/>
	    
	    <Button 
	        android:id="@+id/home_start_sign_in_button"
	        android:layout_below="@id/home_start_sign_up_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:text="@string/home_sign_in"/>
	    
	    <Button 
	        android:id="@+id/test_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_alignParentBottom="true"
	        android:text="@string/test_button" />
	
	</RelativeLayout>
	
	<!-- Sign in layout -->
	<RelativeLayout 
	    android:id="@+id/home_sign_in"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    <TextView 
	        android:id="@+id/home_sign_in_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:text="@string/home_sign_in"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	    
	    <EditText 
	        android:id="@+id/home_sign_in_email"
	        android:layout_below="@id/home_sign_in_text"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="10dp"
	        android:hint="@string/home_email"
	        android:inputType="textEmailAddress" />
	    
		<EditText 
		    android:id="@+id/home_sign_in_password"
		    android:layout_below="@id/home_sign_in_email"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="10dp"
		    android:hint="@string/home_password"
		    android:inputType="textPassword"/>
	    
	    <Button 
	        android:id="@+id/home_sign_in_button"
	        android:layout_below="@id/home_sign_in_password"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="10dp"
	        android:text="@string/home_sign_in"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
	    <TextView 
	        android:id="@+id/home_sign_in_forgot_password"
	        android:layout_below="@id/home_sign_in_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="15dp"
	        android:text="@string/home_forgot_password"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	    
	    <TextView 
	        android:id="@+id/home_sign_in_not_registered"
	        android:layout_alignParentBottom="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:text="@string/home_not_registered"
	        android:textAppearance="?android:attr/textAppearanceMedium"/>
	</RelativeLayout>
	
	<!-- Register layout -->
	<RelativeLayout 
	    android:id="@+id/home_sign_up"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	
	    <TextView 
	        android:id="@+id/home_sign_up_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:text="@string/home_sign_up"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	    
	    <EditText 
	        android:id="@+id/home_sign_up_email"
	        android:layout_below="@id/home_sign_up_text"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="10dp"
	        android:hint="@string/home_email"
	        android:inputType="textEmailAddress" />
	    
		<EditText 
		    android:id="@+id/home_sign_up_password"
		    android:layout_below="@id/home_sign_up_email"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="10dp"
		    android:hint="@string/home_password"
		    android:inputType="textPassword"/>
		
		<EditText 
		    android:id="@+id/home_sign_up_password_again"
		    android:layout_below="@id/home_sign_up_password"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="10dp"
		    android:hint="@string/home_password_again"
		    android:inputType="textPassword"/>
		
		<TextView 
		    android:id="@+id/home_sign_up_wrong_passwords"
		    android:layout_below="@id/home_sign_up_password_again"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:text="@string/home_same_password"
	        android:textColor="#ff0000"
	        android:textAppearance="?android:attr/textAppearanceMedium"/>
	    
	    <Button 
	        android:id="@+id/home_sign_up_button"
	        android:layout_below="@id/home_sign_up_wrong_passwords"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="10dp"
	        android:text="@string/home_sign_up"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
	    <TextView 
	        android:id="@+id/home_sign_up_registered"
	        android:layout_alignParentBottom="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:text="@string/home_registered"
	        android:textAppearance="?android:attr/textAppearanceMedium"/>
	</RelativeLayout>
</ViewFlipper>