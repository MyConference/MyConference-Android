<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >
	
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
	    
	    <ImageView 
	        android:id="@+id/keynote_description_photo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="4dp"
        	android:contentDescription="@string/keynote_photo"
        	android:src="@drawable/vlopez"/>
	    <TextView 
	        android:id="@+id/keynote_description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/keynote_description_photo"
	        android:paddingLeft="4dp"
	        android:paddingRight="10dp"
	        android:paddingTop="4dp"
	        android:text="@string/keynote_description"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textStyle="italic"/>
	
	</RelativeLayout>
</ScrollView>
