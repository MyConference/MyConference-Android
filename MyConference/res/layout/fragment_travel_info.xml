		    android:id="@+id/travel_image_4"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:padding="6dp"
		    android:src="@drawable/shanghai_night"
		    android:contentDescription="@string/travel_image_4"/>
		<TextView 
		    android:id="@+id/travel_text_7"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="@string/travel_text_7"
		    android:padding="6dp"
		    android:textAppearance="?android:attr/textAppearanceSmall"/>
		<ImageView 
		    android:id="@+id/travel_image_5"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:padding="6dp"
		    android:src="@drawable/shanghai_food"
		    android:contentDescription="@string/travel_image_5"/>
	    
	</LinearLayout>
</ScrollView>
